<!DOCTYPE html>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
  />

  <style>
    body {
      max-width: 800px;
      margin: 0 auto;
      padding: 2rem;
      font-family: "Palatino Linotype", Palatino, "Book Antiqua", serif;
      line-height: 1.4;
      color: #000;
    }

    h1 {
      font-size: 2rem;
      font-weight: 600;
      text-align: center;
      margin: 0 0 0.5rem 0;
    }

    h2 {
      font-size: 1.2rem;
      font-weight: 600;
      border-bottom: 1px solid #000;
      margin: 2rem 0 1rem 0;
      padding-bottom: 0.2rem;
    }

    .subheader {
      list-style: none;
      padding: 0;
      margin: 0.5rem 0;
      display: flex;
      justify-content: center;
      gap: 0.5rem;
      font-size: 0.9rem;
    }

    .subheader li {
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .subheader li:not(:last-of-type):after {
      content: "·"
    }

    .subheader a {
      color: #000;
      text-decoration: none;
    }

    .subheader a:hover {
      text-decoration: underline;
    }

    .subsectionHeader {
      width: 100%;
      margin: 1rem 0 0.5rem 0;
    }

    .subsectionHeader td {
      padding: 0;
      line-height: 1.2;
    }

    .subsectionHeader tr td:first-child {
      font-weight: 500;
    }

    .subsectionHeader tr td:last-child {
      text-align: right;
      font-style: italic;
    }

    ul {
      margin: 0.5rem 0 1rem 1.5rem;
      padding: 0;
    }

    li {
      margin-bottom: 0.3rem;
    }

    a {
      color: #000;
      text-decoration: none;
    }

    a:hover {
      text-decoration: underline;
    }

    i {
      font-size: 0.9rem;
    }

    @media print {
      body {
        padding: 1rem;
      }
    }
  </style>
  <title>Resumé | Phelipe Teles</title>
</head>
<body>
  <h1>{{ basics.name | upper }}</h1>

  <ul class="subheader">
    <li>{{ basics.birthday | birthday }}</li>
    <li>{{ basics.location.city }}</li>
  </ul>

  <ul class="subheader">
    <li>
      <a href="mailto:{{ basics.email }}">
        <i class="fa-solid fa-envelope"></i>{{ basics.email }}</a>
    </li>
    <li>
      <i class="fa-solid fa-globe"></i><a href="{{ basics.url }}">{{ basics.url }}</a>
    </li>
    {% for profile in basics.profiles %}
    <li>
      <i class="fa-brands fa-{{ profile.network | lower }}"></i><a href="{{ profile.url }}">{{ profile.username }}</a>
    </li>
    {% endfor %}
  </ul>

  <h2>EXPERIÊNCIA</h2>
  {% for job in work %}
    <table class="subsectionHeader">
      <tbody>
        <tr>
          <td><a href="{{ job.url }}">{{ job.name }}</a></td>
          <td>{{ job.startDate | formatPeriod(job.endDate) }}</td>
        </tr>

        <tr>
          <td>{{ job.position }}</td>
          <td>{{ job.location }}</td>
        </tr>
      </tbody>
    </table>

    <ul>
      {% for highlight in job.highlights %}
      <li>{{ highlight }}</li>
      {% endfor %}
    </ul>
  {% endfor %}

  <h2>PROJETOS</h2>
  <ul>
    {% for project in projects %}
      <table class="subsectionHeader">
        <tbody>
          <tr>
            <td>{{ project.name }}</td>
            <td>{{ project.startDate | formatPeriod(project.endDate) }}</td>
          </tr>
        </tbody>
      </table>

      {% for highlight in project.highlights %}
        <li>{{ highlight }}</li>
      {% endfor %}
    {% endfor %}
  </ul>

  <h2>IDIOMAS</h2>
  {% for language in languages %}
    <ul>
      <li>{{ language.language }}: {{ language.fluency }}</li>
    </ul>
  {% endfor %}
</body>
